<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authentication_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.loanapplication.presentation.ui.fragments.LoginFragment"
        android:label="@string/login_fragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment">
        </action>
    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.loanapplication.presentation.ui.fragments.SignUpFragment"
        android:label="@string/signup_fragment"
        tools:layout="@layout/fragment_sign_up">
    </fragment>

</navigation>